---
import SearchComponent from '@/components/AstroSearch.astro'
import { allLocales } from '@/config'
import { getLangRouteParam } from '@/i18n/lang'
import Layout from '@/layouts/Layout.astro'

export async function getStaticPaths() {
  return allLocales.map(lang => ({
    params: { lang: getLangRouteParam(lang) },
  }))
}
---

<Layout>
  <SearchComponent id="search" className="pagefind-ui" uiOptions={{ showImages: false }} />
</Layout>
